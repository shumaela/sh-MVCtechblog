<div class="post">
  <h2>{{post.title}}</h2>
  <p>{{post.content}}</p>
  <p>Created by: {{post.User.username}}</p>
  <p>Created on: {{format_date post.createdAt}}</p>
  <hr>
</div>

<h3>Comments:</h3>
{{#each comments}}
  <div class="comment">
    <p>{{this.comment_text}}</p>
    <p>Comment by: {{this.User.username}}</p>
    <p>Created on: {{format_date this.createdAt}}</p>
  </div>
{{else}}
  <p>No comments yet.</p>
{{/each}}
