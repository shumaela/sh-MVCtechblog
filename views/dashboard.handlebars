{{#if logged_in}}
  <h2>Welcome to Your Dashboard, {{username}}!</h2>
  <h3>Your Posts:</h3>
  {{#each posts}}
    <div class="post">
      <h4>{{title}}</h4>
      <p>{{content}}</p>
      <p>Created on: {{format_date createdAt}}</p>
      <a href="/editpost/{{id}}">Edit</a> | <a href="/delete/{{id}}">Delete</a>
    </div>
  {{/each}}
  <a href="/newpost">Create a New Post</a>
{{else}}
  <p>Please <a href="/login">log in</a> to access your dashboard.</p>
{{/if}}
